<div class="container">
  <div class="auth-container">
    <h2 class="auth-title">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="input">
        <p><%= f.label :email %></p>
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
      </div>

      <div class="submit">
        <%= f.submit "Send me password reset instructions" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= link_to "Login", new_session_path(resource_name) %>
      <%= link_to "Inscrever-se", new_registration_path(resource_name) %>
    </div>
  </div>
</div>